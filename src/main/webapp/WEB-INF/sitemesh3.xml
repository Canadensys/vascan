<sitemesh>
    <mapping path="/*" decorator="/decorators/layout.ftl"/>
    
	<!-- JSON responses are already excluded but we can skip all /api and /refine paths -->
    <mapping path="/api/*" exclude="true" />
    <mapping path="/refine/*" exclude="true" />
    
    <content-processor>
    	<tag-rule-bundle class="net.canadensys.web.ContentBlockTagRuleBundle" />
    </content-processor>
</sitemesh>